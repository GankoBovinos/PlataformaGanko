<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="bovine"
            type="ganko.movil.ganko1.data.model.Bovine"/>
        <import type="android.view.View"/>
        <variable
            name="state"
            type="Integer"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/medium">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility='@{state == 0 ? View.VISIBLE : View.GONE}'
                    tools:visibility="visible">

                    <include layout="@layout/item_id_name"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{bovine.name}'
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:background="@drawable/input"
                        tools:text="Luna"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de evento" />

                    <EditText
                        android:id="@+id/event_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Fecha de evento"
                        android:inputType="date"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evento" />

                    <EditText
                        android:id="@+id/event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Evento"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />
                </LinearLayout>


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility='@{state == 1 ? View.VISIBLE : View.GONE}'
                    tools:visibility="gone">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tratamiento o estrategia" />

                    <EditText
                        android:id="@+id/strategy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Tratamiento o estrategia"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frecuencia (días)" />

                    <EditText
                        android:id="@+id/frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Frecuencia (días)"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Producto" />

                    <EditText
                        android:id="@+id/product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Producto"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor " />

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Valor "
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observaciones" />

                    <EditText
                        android:id="@+id/observations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:hint="Observaciones"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/small" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnCancelManage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnBackManage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Atras"
                android:visibility='@{state == 1 ? View.VISIBLE : View.GONE}'
                tools:visibility="gone"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnNextManage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Siguiente"
                android:visibility='@{state == 0 ? View.VISIBLE : View.GONE}'
                tools:visibility="visible"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnAddManage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:visibility='@{state == 1 ? View.VISIBLE : View.GONE}'
                tools:visibility="gone"
                style="@style/Widget.AppCompat.Button.Colored"
                />

        </LinearLayout>
    </LinearLayout>
</layout>