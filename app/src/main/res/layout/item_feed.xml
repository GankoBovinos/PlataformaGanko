<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_xxxs"
    android:background="@color/light"
    android:padding="@dimen/less_small"
    app:layout_goneMarginBottom="@dimen/margin_xxxs">

    <TableRow
        android:id="@+id/dateAndValueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateView"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="Fecha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small" />

        <TextView
            android:id="@+id/date"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="30/11/2017"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:id="@+id/rationAndValueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rationView"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="RaciÃ³n:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small" />

        <TextView
            android:id="@+id/ration"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="15 Kg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:id="@+id/productAndValueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productView"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="Producto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small" />

        <TextView
            android:id="@+id/product"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Bloque nutricional:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:id="@+id/kiloAndValueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/valueXKiloView"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="Valor x Kilo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            />
        <TextView
            android:id="@+id/valueXKilo"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="10000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            />

    </TableRow>

    <TableRow
        android:id="@+id/totalAndValueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/totalValueView"
            style="@style/TextAppearance.AppCompat.Body2"
            tools:text="Valor Total:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            />
        <TextView
            android:id="@+id/totalValue"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="150000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

    </TableRow>
</TableLayout>