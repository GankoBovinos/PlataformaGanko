<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="finca"
            type="ganko.movil.ganko1.data.model.Finca"/>
        <variable
            name="clickFinca"
            type="io.reactivex.subjects.PublishSubject"/>
        <variable
            name="clickDelete"
            type="io.reactivex.subjects.PublishSubject"/>
        <variable
            name="clickEdit"
            type="io.reactivex.subjects.PublishSubject"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginTop="@dimen/small"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:elevation="@dimen/small"
        android:onClick='@{()->clickFinca.onNext(finca)}'
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombreFinca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:layout_marginTop="@dimen/small"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Mi Finca 1"
                android:text="@{finca.nombre}"/>

            <TextView
                android:id="@+id/ubicacionFinca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                tools:text="Ubicación 1"
                android:text="@{finca.ubicacion}"/>

            <TextView
                android:id="@+id/tamanioFinca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginRight="@dimen/small"
                android:layout_marginBottom="@dimen/small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Tamaño 1"
                android:text='@{""+finca.hectareas}'/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/light_grey_card">
                <ImageView
                    android:id="@+id/editFinca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:src="@drawable/ic_edit"
                    android:onClick='@{()->clickEdit.onNext(finca)}'
                    />
                <ImageView
                    android:id="@+id/deleteFinca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:src="@drawable/ic_delete"
                    android:onClick='@{()->clickDelete.onNext(finca)}'
                    />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
